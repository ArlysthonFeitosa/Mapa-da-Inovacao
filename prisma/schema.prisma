// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institution {
  id          String        @id @default(cuid())
  name        String
  description String
  picture     Media?        @relation(fields: [pictureId], references: [id])
  pictureId   String?
  locations   Location[]
  categories  String[]
  links       Link[]
  childOf     Institution[] @relation("institutionsRelation")
  children    Institution[] @relation("institutionsRelation")
}

model Media {
  id         String   @id @default(cuid())
  path       String
  uploadedAt DateTime @default(now())

  Institution Institution[]
}

model Location {
  id            String       @id @default(cuid())
  lat           Float?
  long          Float?
  uf            String?
  city          String?
  district      String?
  street        String?
  number        String?
  complement    String?
  postalCode    String?
  Institution   Institution? @relation(fields: [institutionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  institutionId String?
}

model Link {
  id            String       @id @default(cuid())
  name          String
  content       String
  category      String?
  Institution   Institution? @relation(fields: [institutionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  institutionId String?
}
